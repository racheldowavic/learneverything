<script>
  function filterArticles() {

    var input = document.getElementById('search');
    var filter = input.value.toUpperCase();
    var articleList = document.getElementById('articles');
    var listItems = document.getElementsByClassName('articleItem');

    // Loop through all the items and hide those
    // who don't match the search query
    for (var i = 0; i < listItems.length; i++) {
      var card = listItems[i].getElementsByTagName("p")[0];
      if (card.innerHTML.toUpperCase().indexOf(filter) > -1) {
        listItems[i].style.display = "";
      } else {
        listItems[i].style.display = "none";
      }
    }
  }

</script>

